{
  "name": "pcw-toolbelt",
  "displayName": "PCW ToolBelt",
  "description": "PowerPacks for your dev workflow - Modular tools for WordPress, Elementor, and WooCommerce development",
  "version": "1.0.0",
  "publisher": "pcwprops",
  "icon": "assets/icon.png",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other",
    "Programming Languages",
    "Snippets"
  ],
  "keywords": [
    "wordpress",
    "elementor",
    "woocommerce",
    "php",
    "automation"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "pcw.core.generateContextMap",
        "title": "PPACK: Core: Generate Context Map",
        "category": "Core"
      },
      {
        "command": "pcw.core.auditFile",
        "title": "PPACK: Core: Audit File (Context-Aware)",
        "category": "Core"
      },
      {
        "command": "pcw.core.auditWorkspace",
        "title": "PPACK: Core: Audit Workspace (Context-Aware)",
        "category": "Core"
      },
      {
        "command": "pcw.core.reloadRules",
        "title": "PPACK: Core: Reload Audit Rules",
        "category": "Core"
      },
      {
        "command": "pcw.core.setGuardrails",
        "title": "PPACK: Core: Set Project Guardrails",
        "category": "Core"
      },
      {
        "command": "pcw.core.updateGuardrails",
        "title": "PPACK: Core: Update Guardrails",
        "category": "Core"
      },
      {
        "command": "pcw.core.scanSecrets",
        "title": "PPACK: Core: Secret Scanner",
        "category": "Core"
      },
      {
        "command": "pcw.elementor.auditWidget",
        "title": "PPACK: Elementor: Audit Widget (Pre-Flight)",
        "category": "Elementor"
      },
      {
        "command": "pcw.elementor.generateBoilerplate",
        "title": "PPACK: Elementor: Generate Widget Boilerplate",
        "category": "Elementor"
      },
      {
        "command": "pcw.wordpress.scaffoldChildTheme",
        "title": "PPACK: WordPress: Scaffold Child Theme",
        "category": "WordPress"
      },
      {
        "command": "pcw.wordpress.runWPCS",
        "title": "PPACK: WordPress: Run WPCS Compliance Check",
        "category": "WordPress"
      },
      {
        "command": "pcw.woocommerce.checkTemplateOverrides",
        "title": "PPACK: WooCommerce: Check Template Overrides",
        "category": "WooCommerce"
      },
      {
        "command": "pcw.woocommerce.generateCustomTab",
        "title": "PPACK: WooCommerce: Generate Custom Tab",
        "category": "WooCommerce"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "pcw-toolbelt",
          "title": "PCW ToolBelt",
          "icon": "assets/icon.png"
        }
      ]
    },
    "views": {
      "pcw-toolbelt": [
        {
          "type": "webview",
          "id": "pcw-toolbelt.sidePanel",
          "name": "PowerPacks"
        }
      ]
    },
    "configuration": {
      "title": "PCW ToolBelt",
      "properties": {
        "pcw-toolbelt.chatProvider": {
          "type": "string",
          "default": "github-copilot",
          "enum": [
            "github-copilot",
            "gemini",
            "chatgpt"
          ],
          "enumDescriptions": [
            "GitHub Copilot Chat (requires GitHub.copilot-chat extension)",
            "Google Gemini (requires GoogleCloudTools.cloudcode extension)",
            "ChatGPT (requires gencay.vscode-chatgpt extension)"
          ],
          "description": "Choose which AI chat provider to use for 'Copy to Chat' feature"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "typescript": "^5.7.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/PCWProps/pcw-toolbelt"
  },
  "license": "MIT"
}
